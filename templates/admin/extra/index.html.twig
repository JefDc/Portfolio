{% extends 'admin/base.html.twig' %}
{% block body %}
{% for extra in extras %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row justify-content-center">
                <div class="col-6 grid-margin mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">A propos</h4>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Numero de téléphone :</label>
                                            <div class="col-sm-9">
                                                {{ extra.numberPhone }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Adresse :</label>
                                            <div class="col-sm-9">
                                                {{ extra.address }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Email :</label>
                                            <div class="col-sm-9">
                                                {{ extra.email }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Texte contact :</label>
                                            <div class="col-sm-9">
                                                {{ extra.textContact }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group row">
                                            <label class="col-sm-3 col-form-label">Texte soft skill :</label>
                                            <div class="col-sm-9">
                                                {{ extra.textSoftSkill }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a href="{{ path('extra_edit', {'id' : extra.id}) }}"><button type="submit" class="btn btn-success mr-2">Éditer</button></a>
                        </div>
                    </div>
                     <a href="{{ path('extra_new') }}" class="mdi mdi-playlist-plus text-gray">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}




