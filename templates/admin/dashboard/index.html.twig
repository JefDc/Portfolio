

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Messages</h5>
                            <div class="fluid-container">
                                {% for message in messages %}
                                    <div class="row ticket-card mt-3 pb-2 border-bottom pb-3 mb-3">
                                        <div class="col-md-1">
                                        </div>
                                        <div class="ticket-details col-md-9">
                                            <div class="d-flex">
                                                <p class="text-dark font-weight-semibold mr-2 mb-0 no-wrap">{{ message.name }}
                                                    <a class="text-gray linkEmail" href="mailto:">({{ message.email }}) :</a></p>
                                            </div>
                                            <p class="text-gray ellipsis mb-2">
                                                {{ message.message }}
                                            </p>
                                            <div class="row text-gray d-md-flex d-none">
                                                <div class="col-4 d-flex">
                                                    <small class="mb-0 mr-2 text-muted text-muted">Envoyé le :</small>
                                                    <small class="Last-responded mr-2 mb-0 text-muted text-muted">{{ message.date|date ('d/m/Y') }}</small>
                                                    <small class="mb-0 mr-2 text-muted text-muted">à :</small>
                                                    <small class="Last-responded mr-2 mb-0 text-muted text-muted">{{ message.date|date ('H:i') }}</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="ticket-actions col-md-2">
                                            <div class="btn-group dropdown">
                                                <button type="button" class="btn btn-success dropdown-toggle btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    Action
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a href="{{ path('message_show', {'id' : message.id}) }}">
                                                        <button class="btn btn-link text-black ml-3">Repondre</button>
                                                    </a>
                                                    <a class="dropdown-item" href="{{ path('message_delete', {'id' : message.id}) }}">
                                                        {% include ('/admin/message/_delete_form.html.twig') %}
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer">
            <div class="container-fluid clearfix">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © 2018
              <a href="http://www.bootstrapdash.com/" target="_blank">Bootstrapdash edited by Jef De CONTI</a>. All rights reserved.</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with
              <i class="mdi mdi-heart text-danger"></i>
            </span>
            </div>
        </footer>
        <!-- partial -->
    </div>
{% endblock %}