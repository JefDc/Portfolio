{% extends 'admin/base.html.twig' %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row justify-content-center">
                <div class="col-lg-12 grid-margin stretch-card mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Soft Skill</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Titre
                                        </th>
                                        <th>
                                            Text
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for softskill in soft_skills %}
                                        <tr>
                                            <td>
                                                <img src="/home/img/soft_skill/{{ softskill.img }}" alt="jef-dc">
                                            </td>
                                            <td>
                                                {{ softskill.title }}
                                            </td>
                                            <td>
                                                {{ softskill.content[:30] ~ '...'  }}
                                            </td>
                                            <td>
                                                <div class="delete">
                                                    <a href="{{ path('soft_skill_edit', {'id': softskill.id}) }}"><i class="mdi mdi-pencil-box-outline text-gray"></i></a>
                                                    {{ include('/admin/soft_skill/_delete_form.html.twig') }}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="mdi mdi-playlist-plus text-gray" href="{{ path('soft_skill_new') }}">Cr√©er</a>
        </div>
    </div>
{% endblock %}
