    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for soft_skill in soft_skills %}
            <tr>
                <td>{{ soft_skill.id }}</td>
                <td>{{ soft_skill.title }}</td>
                <td>{{ soft_skill.content }}</td>
                <td>
