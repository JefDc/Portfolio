{% block body %}
    <section class="services-section spad" id="soft">
        <div class="container-fluid services-warp">
            <div class="services-text">
                <div class="container p-0">
                    {% for extra in extras %}
                        <span class="sp-sub-title">{{ extra.subTitleSoftSkill }}</span>
                        <h3 class="sp-title">{{ extra.titleSoftSkill }}</h3>
                        <div class="col-10">
                            <p>{{ extra.textSoftSkill }}</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="container p-0">
                <div class="row">
                    <div class="col-xl-8 offset-xl-4">
                        <div class="row">
                        {% for softskill in soft_skills %}
                            <div class="col-md-6">
                                <div class="icon-box">
                                    <img class="mb-4" src="home/img/soft_skill/{{ softskill.img }}" alt="jef-dc">
                                    <h4>{{ softskill.title }}</h4>
                                    <p>{{ softskill.content }}</p>
                                </div>
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}