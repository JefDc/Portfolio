{% block body %}
    <section class="contact-section set-bg spad" data-setbg="home/img/contact-bg.jpg" id="contact">
        <div class="container-fluid contact-warp">
            <div class="row justify-content-center">
                {% include 'home/flash_message.html.twig' %}
            </div>
            {% for extra in extras %}
            <div class="contact-text">
                <div class="container p-0">
                    <span class="sp-sub-title">{{ extra.subTitleContact }}</span>
                    <h3 class="sp-title">{{ extra.titleContact }}</h3>
                    <p>{{ extra.textContact }}</p>
                    <ul class="con-info">
                        <li><i class="flaticon-phone-call"></i>{{ extra.numberPhone }}</li>
                        <li><i class="flaticon-envelope"></i>{{ extra.email }}</li>
                        <li><i class="flaticon-placeholder"></i>{{ extra.address }}</li>
                    </ul>
                </div>
            </div>
            {% endfor %}
            <div class="container p-0">
                <div class="row">
                    <div class="col-xl-8 offset-xl-4">
                        {{ form_start(form, {'attr' : {'class' : 'contact-form'}}) }}
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_widget(form.name) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_widget(form.email) }}
                                </div>
                                <div class="col-md-12">
                                    {{ form_widget(form.message) }}
                                    <button class="site-btn light">Envoyer</button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}