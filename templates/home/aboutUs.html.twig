{% block body %}
    <section class="intro-section sp-pad spad" id="aboutUs">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12 intro-text">
                    {% for aboutus in intro %}
                        <span class="sp-sub-title">{{ aboutus.subTitle }}</span>
                        <h3 class="sp-title">{{ aboutus.title }}</h3>
                        <p>{{ aboutus.content }}</p>
                        <a href="/home/img/cv/{{ aboutus.cv }}" download="{{ aboutus.cv }}">
                            <button class="site-btn dark mb-5">Télécharger mon cv</button>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}